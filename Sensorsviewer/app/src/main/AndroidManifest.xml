<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oc.mooc.demos.sensorsviewer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OneSensorActivity" android:screenOrientation="portrait"/>
        <activity android:name=".FrisbeeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".AccelerometersComparison" android:screenOrientation="portrait"/>
        <activity android:name=".LightDemo" android:screenOrientation="portrait"/>
    </application>

</manifest>